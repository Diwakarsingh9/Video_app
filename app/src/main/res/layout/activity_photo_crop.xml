<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/client_black_colour"
    tools:context="damroo.spinno.com.damroo.profileModule.PhotoCropActivity">

    /////////////////  Action Bar
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:background="@color/client_grey_colour">



        <views.textview.TypefaceTextView
            android:layout_width="fill_parent"
            geekui:customTypeface="fonts/Roboto-Regular.ttf"
            android:text="Cancel"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/cancel"
            android:textColor="@color/client_offwhite_color"/>



        <views.textview.TypefaceTextView
            android:layout_width="fill_parent"
            geekui:customTypeface="fonts/Roboto-Regular.ttf"
            android:text="Done"
            android:gravity="center|right"
            android:paddingRight="10dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/done"
            android:textColor="@color/client_offwhite_color"/>






    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="@drawable/actionbarbottom"></RelativeLayout>


<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <com.edmodo.cropper.CropImageView
        android:id="@+id/cropimageview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:text="Move and Scale photo to fit"
        android:textColor="@color/icons_8_muted_offWhite"
        android:layout_marginBottom="15dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/testimage"
        android:layout_gravity="left|bottom" />
</FrameLayout>


</LinearLayout>

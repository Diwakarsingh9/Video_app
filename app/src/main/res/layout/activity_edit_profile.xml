<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    xmlns:foobar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/client_black_colour"
    tools:context="damroo.spinno.com.damroo.profileModule.EditProfileActivity">



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:background="@color/client_grey_colour"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/cancel">
            <views.textview.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Cancel"
                geekui:customTypeface="fonts/Roboto-Regular.ttf"
                android:textColor="@color/client_offwhite_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <views.textview.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Edit Profile"
                geekui:customTypeface="fonts/Roboto-Regular.ttf"
                android:textColor="@color/client_offwhite_color"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="49dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/done">
            <views.textview.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Done"
                geekui:customTypeface="fonts/Roboto-Regular.ttf"
                android:textColor="@color/client_offwhite_color"
                android:id="@+id/tyre_name_in_item_of_bucket_list" />
        </LinearLayout>
    </LinearLayout>



    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">





            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textColor="#959696"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="Public Information"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/client_green_color"/>



            ///////////////////////////////        username
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/prifile_icon"/>


                <com.ctrlplusz.anytextview.AnyEditTextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    foobar:typeface="Roboto-Light.ttf"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="..."
                    android:paddingLeft="50dp"
                    android:id="@+id/channelname"
                    android:gravity="center|left"
                    android:background="@android:color/transparent"
                    android:textColor="@color/client_offwhite_color"/>


            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/client_grey_colour"/>






            ///////////////////////////////        user site
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/tv_icon"/>


                <com.ctrlplusz.anytextview.AnyEditTextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    foobar:typeface="Roboto-Light.ttf"
                    android:background="@android:color/transparent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="..."
                    android:paddingLeft="50dp"
                    android:id="@+id/website"
                    android:gravity="center|left"
                    android:textColor="@color/client_offwhite_color"/>


            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/client_grey_colour"/>






            ///////////////////////////////        user info
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/info_icon"/>


                <com.ctrlplusz.anytextview.AnyEditTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    foobar:typeface="Roboto-Light.ttf"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:background="@android:color/transparent"
                    android:text="..."
                    android:paddingLeft="50dp"
                    android:paddingRight="20dp"
                    android:id="@+id/tags"
                    android:gravity="center|left"
                    geekui:customTypeface="fonts/Roboto-Regular.ttf"
                    android:textColor="@color/client_offwhite_color"/>


            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/client_grey_colour"/>



            ////////////////////////////////////////////NEXT SECTION //////////////////////////////////





            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textColor="#959696"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="Personal Information"
                android:layout_marginTop="30dp"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/client_green_color"/>






            //////////////////////////  najme
            ///////////////////////////////        username
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/indentity_card_icon"/>


                <com.ctrlplusz.anytextview.AnyEditTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    foobar:typeface="Roboto-Light.ttf"
                    android:background="@android:color/transparent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="..."
                    android:paddingLeft="50dp"
                    android:id="@+id/username"
                    android:gravity="center|left"
                    android:textColor="@color/client_offwhite_color"/>


            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/client_grey_colour"/>





            ///////////////////  website
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/at_rate_icon"/>


                <com.ctrlplusz.anytextview.AnyEditTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    foobar:typeface="Roboto-Light.ttf"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="..."
                    android:paddingLeft="50dp"
                    android:id="@+id/useremail"
                    android:gravity="center|left"
                    android:textColor="@color/client_offwhite_color"/>


            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/client_grey_colour"/>







            ///////////////////////////////        phone
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/mobile_icon"/>


                <com.ctrlplusz.anytextview.AnyEditTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    foobar:typeface="Roboto-Light.ttf"
                    android:background="@android:color/transparent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="..."
                    android:paddingLeft="50dp"
                    android:id="@+id/userphone"
                    android:gravity="center|left"
                    android:textColor="@color/client_offwhite_color"/>


            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/client_grey_colour"/>







            ///////////////////////////////        change opassword
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:id="@+id/changepassword"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/lock_icon"/>


                <views.textview.TypefaceTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    foobar:typeface="Roboto-Light.ttf"
                    android:background="@android:color/transparent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Change Password"
                    android:paddingLeft="50dp"
                    geekui:customTypeface="fonts/Roboto-Regular.ttf"
                    android:gravity="center|left"
                    android:textColor="@color/client_offwhite_color"/>


            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/client_grey_colour"/>




        </LinearLayout>
    </ScrollView>









</LinearLayout>

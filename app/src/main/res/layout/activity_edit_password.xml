<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:foobar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_bottom_to_top"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="damroo.spinno.com.damroo.login_module.LoginScreenActivity">

    /////////////////  Action Bar
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:background="@color/client_grey_colour">



        <views.textview.TypefaceTextView
            android:layout_width="fill_parent"
            geekui:customTypeface="fonts/Roboto-Regular.ttf"
            android:text="Cancel"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/cancel"
            android:textColor="@color/client_offwhite_color"/>



        <views.textview.TypefaceTextView
            android:layout_width="fill_parent"
            geekui:customTypeface="fonts/Roboto-Regular.ttf"
            android:text="Done"
            android:gravity="center|right"
            android:paddingRight="10dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:id="@+id/changepassword"
            android:textColor="@color/client_offwhite_color"/>






    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:gravity="center|bottom">

        <views.textview.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            geekui:customTypeface="fonts/Roboto-Regular.ttf"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Change Your Password"
            android:textColor="#ffffff"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <com.ctrlplusz.anytextview.AnyEditTextView
            foobar:typeface="Roboto-Light.ttf"
            android:layout_width="@dimen/edit_text_width"
            android:layout_height="@dimen/edit_text_height"
            android:hint="Old Password"
            android:textColorHint="@color/client_offwhite_color"
            android:gravity="center|left"
            android:textSize="@dimen/edit_text_textsize"
            android:paddingLeft="@dimen/edit_text_padding_left"
            android:textColor="#ffffff"
            android:id="@+id/oldpassword"
            android:layout_marginBottom="@dimen/edit_text_margin_bottom"
            android:background="@drawable/login_edit_text"/>

        <com.ctrlplusz.anytextview.AnyEditTextView
            foobar:typeface="Roboto-Light.ttf"
            android:layout_width="@dimen/edit_text_width"
            android:layout_height="@dimen/edit_text_height"
            android:hint="New Password"
            android:textColorHint="@color/client_offwhite_color"
            android:gravity="center|left"
            android:textSize="@dimen/edit_text_textsize"
            android:paddingLeft="@dimen/edit_text_padding_left"
            android:textColor="#ffffff"
            android:id="@+id/newpassword"
            android:layout_marginBottom="@dimen/edit_text_margin_bottom"
            android:background="@drawable/login_edit_text"/>



    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="10dp">

        <views.textview.TypefaceTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            geekui:customTypeface="fonts/Roboto-Regular.ttf"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/changepasswordmessage"
            android:textColor="#ffffff"/>
    </LinearLayout>




    <!--   -->

</LinearLayout>

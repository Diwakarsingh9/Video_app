<?xml version="1.0" encoding="utf-8" ?>
<com.daimajia.swipe.SwipeLayout
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe"
    android:background="@color/client_grey_colour"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">




    ////////  layout at back
    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:background="@color/client_grey_colour"
        android:gravity="center|top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/heart_img_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/heart_white"
            />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/link_icon_white" />


    </LinearLayout>





    /////  layout visible
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/item_selector">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/bannerimage"/>

        <views.textview.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Mitti Di Khushboo | Teaser"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="20dp"
            android:id="@+id/titles"
            android:layout_marginLeft="10dp"
            geekui:customTypeface="fonts/Roboto-Regular.ttf"
            android:textColor="@color/client_offwhite_color"
            android:textStyle="bold" />

        <views.textview.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ayushmann Khurana"
            android:id="@+id/tags"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            geekui:customTypeface="fonts/Roboto-Regular.ttf"
            android:textColor="@color/client_offwhite_color"
            android:textStyle="bold" />


        <views.textview.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="2:34"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            geekui:customTypeface="fonts/Roboto-Regular.ttf"
            android:textColor="@color/client_offwhite_color" />

    </FrameLayout>
</com.daimajia.swipe.SwipeLayout>